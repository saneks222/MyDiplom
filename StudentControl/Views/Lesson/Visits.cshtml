@model List<Visit> 

<h3 style="align-content:center; margin-bottom:3%">Посещаемость</h3>

@using (Html.BeginForm("UpdateVisit","Lesson", FormMethod.Post))
{
    <table  class="table table-hover">
       
 
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <th>Студент:</th>
                @Html.HiddenFor(x => x[i].Id)
                <td><p>@Model[i].Student.Surname @Model[i].Student.Name @Model[i].Student.Patronymic </p></td>
                <td>Присутсвие @Html.CheckBoxFor(x => x[i].Attended)</td>
            </tr>
        }
 
    </table>
    <input type="submit" class="btn btn-success myBtn" value="Сохранить" />
}